<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br>
  <%= f.label :genre_id, "Genre" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name%><br>
  <%= f.label "Notes:" %>
  <ul>
    <li><input name="song[notes_array][]" id="song_notes_1"></li>
    <li><input name="song[notes_array][]" id="song_notes_2"></li>
  </ul>

  <%= f.submit %>
<% end %>


